{
  "includeCoAuthoredBy": false,
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "~/.claude/scripts/status-line.sh"
  },
  "hooks": {
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/needs-permission.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify-ready.sh"
          }
        ]
      }
    ]
  }
}
