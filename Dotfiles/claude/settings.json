{
  "includeCoAuthoredBy": false,
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "~/.claude/scripts/status-line.sh"
  },
  "permissions": {
    "allow": [
      "Bash(cargo check:*)",
      "Bash(cargo build:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo doc:*)",
      "Bash(cargo fmt:*)",
      "Bash(cargo fix:*)",
      "Bash(cargo info:*)",
      "Bash(cargo metadata:*)",
      "Bash(cargo rustc:*)",
      "Bash(cargo rustdoc:*)",
      "Bash(cargo search:*)",
      "Bash(cargo test:*)",
      "Bash(cargo tree:*)",
      "Bash(find:*)",
      "Bash(git diff:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(pnpm audit:*)",
      "Bash(pnpm build:*)",
      "Bash(pnpm lint)",
      "Bash(pnpm test:*)",
      "Bash(pnpm why:*)",
      "Bash(rg:*)",
      "Bash(sed:*)",
      "Bash(tail:*)"
    ],
    "deny": [
      "Bash(cargo owner:*)",
      "Bash(cargo publish:*)",
      "Bash(cargo yank:*)",
      "Read(./aws/**)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
    ],
    "ask": [
      "Bash(cargo add:*)",
      "Bash(cargo install:*)",
      "Bash(cargo login:*)",
      "Bash(cargo logout:*)",
      "Bash(cargo remove:*)",
      "Bash(cargo uninstall:*)",
      "Bash(cargo update:*)",
      "Bash(git push:*)",
      "Bash(rm:*)"
    ]
  },
  "hooks": {
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/needs-permission.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify-ready.sh"
          }
        ]
      }
    ]
  }
}
